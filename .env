
#.env

# ===============================
# TRADING MODE
# ===============================
TRADING_MODE=shadow
ALLOW_LIVE_TRADING=

# ===============================
# MARKET CONFIG
# ===============================
TRADING_TIMEFRAME=1m
LOOKBACK_BARS=300
LOOP_SLEEP_SECONDS=900

TRADING_SYMBOL=BTC/USDT
TRADING_SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT,BNB/USDT,LINK/USDT,AVAX/USDT

DATA_RETRY_ATTEMPTS=3
MAX_CONSECUTIVE_ERRORS=5

# ===============================
# EXCHANGE CONFIG
# ===============================
EXCHANGE_NAME=binance
EXCHANGE_TESTNET=true
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# ===============================
# CAPITAL & RISK
# ===============================
# ~â‚¹500 total capital (~$5.5)
PAPER_STARTING_BALANCE_USDT=11
MIN_BALANCE_USDT=3.0

# Faster re-entries for small capital
ENTRY_COOLDOWN_MINUTES=5
RISK_PER_TRADE=0.01

# Allow full wallet usage (small account friendly)
MAX_POSITION_NOTIONAL_PCT=1.00

# ===============================
# STRATEGY THRESHOLDS
# ===============================
LONG_PROB_THRESHOLD=0.52
SHORT_PROB_THRESHOLD=0.48
MIN_ADX=8

TAKE_PROFIT_RR=1.3
BREAKEVEN_RR=0.8

# ===============================
# PORTFOLIO CONTROL
# ===============================
MAX_ACTIVE_POSITIONS=2
CAPITAL_ALLOCATION_PER_SYMBOL_PCT=1.00
MAX_DRAWDOWN_PCT=1.0

# ===============================
# MODEL QUALITY GATES
# ===============================
REQUIRE_MODEL_QUALITY=true
MIN_MODEL_VAL_F1=0.10
MIN_MODEL_VAL_PRECISION=0.10
MIN_MODEL_VAL_RECALL=0.10


